[branch]
  sort = -committerdate
[column]
  ui = auto
[commit]
  gpgsign = true
  verbose = true
[core]
  excludesfile = ~/.global_gitignore
[diff]
  algorithm = histogram
  colorMoved = default
  mnemonicPrefix = true
  renames = true
[feature]
  experimental = false
[fetch]
  all = true
  prune = true
  pruneTags = true
[gpg]
  format = ssh
[help]
  autocorrect = prompt
[include]
  path = ~/.gitconfig-os-specific
[init]
  defaultBranch = main
[merge]
  conflictStyle = zdiff3
[pull]
  rebase = true
[push]
  autoSetupRemote = true
  default = simple
  followTags = true
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[rerere]
  autoUpdate = true
  enabled = true
[url "git@github.com:"]
  insteadOf = https://github.com/
